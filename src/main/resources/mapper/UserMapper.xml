    updater_id, updater, update_time, del
  </sql>

    <sql id="Base_Column_List_Exclude_Password">
        id, user_name, real_name, sex, age, birthday, cell_phone, email, address,
        city, country, status, salt, last_login_date, create_time, creator, update_time,
        updater, del
    </sql>

    <select id="loadUserByUsername" resultType="com.xingling.model.domain.User">
        SELECT
        <include refid="Base_Column_List" />
        from  xl_user WHERE user_name = #{userName}
    </select>

    <select id="queryListPage" resultType="com.xingling.model.domain.User">
        SELECT <include refid="Base_Column_List_Exclude_Password" />
        FROM xl_user aa
        WHERE 1=1 and aa.del = 0
        <if test="userName != null and userName != ''">
            AND aa.user_name LIKE concat('%',#{userName},'%')
        </if>
        <if test="cellPhone != null and cellPhone != ''">
            AND aa.cell_phone = #{cellPhone}
        </if>
        <if test="sex != null and sex != ''">
            AND aa.sex = #{sex}
        </if>
    </select>
    <select id="selectAllExcludeSupper" resultType="com.xingling.model.domain.User">
        SELECT aa.* from xl_user aa WHERE
        <if test="_param != null and _param == '1'.toString()">
            aa.id != '1'
        </if>
    </select>

